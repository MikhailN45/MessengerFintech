<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/stream_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:padding="16dp">

    <TextView
        android:id="@+id/stream_name"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:textColor="@color/item_text_color"
        android:textFontWeight="400"
        android:textSize="18sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/stream_expand_button"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="end|center"
        android:contentDescription="@string/expand_stream"
        android:scaleType="center"
        android:src="@drawable/ic_expand_stream"
        app:tint="@color/expand_button_color" />

</FrameLayout>